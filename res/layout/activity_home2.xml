<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.waverr.Home2" >

    <!--
         As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="150"
            tools:context="com.project.waverr.Home" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:background="#fe5335"
                android:orientation="horizontal"
                android:weightSum="10" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:weightSum="10" >

                    <Button
                        android:id="@+id/slidemenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="#0000"
                        android:drawableLeft="@drawable/menu_icon" />

                    <Button
                        android:id="@+id/contactpic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="#0000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:weightSum="10" >

                    <TextView
                        android:id="@+id/cityname"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="8"
                        android:gravity="right|center"
                        android:text="Mangalore"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/cityselect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="#0000"
                        android:drawableRight="@drawable/city_select"
                        android:gravity="left|center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="150"
                android:background="#f1f1f1"
                android:orientation="horizontal" >

                <TabHost
                    android:id="@+id/tabhost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <HorizontalScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:fillViewport="true"
                            android:scrollbars="none" >

                            <TabWidget
                                android:id="@android:id/tabs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >
                            </TabWidget>
                        </HorizontalScrollView>

                        <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <LinearLayout
                                android:id="@+id/tab1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:weightSum="10" >

                                <ScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" >

                                   <LinearLayout
                                        android:id="@+id/dealpage"
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:orientation="vertical"
                                        android:weightSum="10" >

                                        <ImageButton
                                            android:id="@+id/cuisine1"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="4dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:background="#0000"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/fastfood" />
                                        
                                        <ImageButton
                                            android:id="@+id/cuisine4"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="4dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:background="#0000"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/drinks" />

                                             
                                        <ImageButton
                                            android:id="@+id/cuisine6"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="4dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:background="#0000"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/northindian" />
                                        
                                        <ImageButton
                                            android:id="@+id/cuisine2"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="4dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:background="#0000"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/italian" />
                                   

                                        <ImageButton
                                            android:id="@+id/cuisine3"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="4dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:background="#0000"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/dessert" />

                                        <ImageButton
                                            android:id="@+id/cuisine5"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="4dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:background="#0000"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/biriyani" />

                                        <ImageButton
                                            android:id="@+id/cuisine7"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="4dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:background="#0000"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/chinesenew" />
                                        
                                        <ImageButton
                                            android:id="@+id/cuisine8"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="4dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:background="#0000"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/south_indian" />
                                        
                                        <ImageButton
                                            android:id="@+id/cuisine9"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="4dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:background="#0000"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/kebabs" />
                                        
                                        <ImageButton
                                            android:id="@+id/cuisine10"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="4dp"
                                            android:layout_weight="1"
                                            android:adjustViewBounds="true"
                                            android:background="#0000"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/sea_food" />
                                    </LinearLayout>
                                </ScrollView>
                            </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/tab2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >
                                
                                    <ScrollView
    									android:layout_width="fill_parent"
    									android:layout_height="wrap_content" >
        
										<LinearLayout
									    	android:id="@+id/allrestaurants"
		    								android:layout_width="fill_parent"
		    								android:layout_height="wrap_content"
	    									android:layout_marginLeft="4dp"
		    								android:layout_marginRight="4dp"
		    								android:orientation="vertical" >

										</LinearLayout>
									</ScrollView>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/tab3"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >
										
                                    <TextView
	    android:id="@+id/DealType"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:background="#ffffff"
	    android:textColor="#000000"
	    android:text=""
	    android:gravity="center"
	    android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/dealRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChineseDeal2" />
    
    <TextView
	    android:id="@+id/noDeals"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:background="#ffffff"
	    android:textColor="#bababa"
	    android:text=""
	    android:gravity="center"
	    android:textAppearance="?android:attr/textAppearanceMedium" />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/tab4"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >
                                
                                    <ScrollView
    									android:layout_width="fill_parent"
    									android:layout_height="wrap_content" >
        
										<LinearLayout
									    	android:id="@+id/nearby"
		    								android:layout_width="fill_parent"
		    								android:layout_height="wrap_content"
	    									android:layout_marginLeft="4dp"
		    								android:layout_marginRight="4dp"
		    								android:orientation="vertical" >

										</LinearLayout>
									</ScrollView>
                                </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </TabHost>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!--
         android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!--
         The drawer is given a fixed width in dp and extends the full height of
         the container. -->
    <!--
	<LinearLayout 
	    android:id="@+id/navigation_drawer"
	    android:name="com.project.waverr.NavigationDrawerFragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start" >
        
	    <ImageButton
		    android:id="@+id/drawer_pic"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
	    	android:background="#0000"
		    android:scaleType="fitXY"
		    android:layout_weight="1"
			android:layout_margin="4dp"
			android:adjustViewBounds="true"
			android:src="@drawable/cuisine2" /> -->

    <fragment
        android:id="@+id/navigation_drawer"
        android:name="com.project.waverr.NavigationDrawerFragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>