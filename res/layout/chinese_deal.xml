<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="150"
    tools:context="com.project.waverr.Home" >

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_weight="12"
        android:background="#fe5335"
        android:baselineAligned="false">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:weightSum="10" >

    <Button
        android:id="@+id/slidemenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="#0000"
        android:drawableLeft="@drawable/menu_icon" />

    <Button
        android:id="@+id/contactpic"
        android:layout_width="0dp"
        android:background="#0000"
        android:layout_height="wrap_content"
        android:layout_weight="4" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:weightSum="10"
    android:gravity="right" >

    <TextView
        android:id="@+id/cityname"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="8"
        android:text="Mangalore"
        android:gravity="right|center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />
    
    <Button
        android:id="@+id/cityselect"
        android:layout_width="0dp"
        android:background="#0000"
        android:layout_weight="2"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/city_select" />

</LinearLayout>
    
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_margin="4dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        >

    <SearchView
		android:id="@+id/searchView1"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
	</SearchView>

</LinearLayout>
<LinearLayout
    	android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_weight="118">
    
   					<ImageButton
					    android:id="@+id/chinesedeal1"
					    android:layout_width="wrap_content"
					    android:layout_height="0dp"
					    android:layout_weight="1"
					    android:layout_margin="4dp"
					    android:src="@drawable/chinese1" />

					<ImageButton
					    android:id="@+id/chinesedeal2"
					    android:layout_width="wrap_content"
					    android:layout_height="0dp"
					    android:layout_weight="1"
					    android:layout_margin="4dp"
					    android:src="@drawable/chinese1" />
</LinearLayout>


</LinearLayout>
